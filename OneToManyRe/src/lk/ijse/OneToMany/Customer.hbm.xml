<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="lk.ijse.OneToMany.entity.Customer" table="customer">
        <id name="id" column="customerId">
            <generator class="lk.ijse.OneToMany.Generator.CustomerIDGenerator"/>
        </id>
        <property name="name" column="customer_name"></property>
        <property name="address" column="customer_address"/>
        <property name="contact" column="customer_contact"/>
    </class>
</hibernate-mapping>